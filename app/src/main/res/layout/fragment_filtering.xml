<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.filtering.FilteringFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarFiltering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/filtering_settings"
        app:titleTextAppearance="@style/appearance_medium_22" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/area"
        style="@style/unactiveTextInput"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:hint="@string/place_of_work"
        android:paddingTop="12.5dp"
        app:endIconDrawable="@drawable/arrow_forward_24"
        app:endIconMode="custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarFiltering">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/areaEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="false"
            android:paddingTop="0dp"
            android:paddingBottom="12.5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            tools:text="Россия, Москва" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sector"
        style="@style/unactiveTextInput"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:hint="@string/branch"
        android:paddingTop="12.5dp"
        app:endIconDrawable="@drawable/arrow_forward_24"
        app:endIconMode="custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/area">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sectorEdit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="false"
            android:paddingTop="0dp"
            android:paddingBottom="12.5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            tools:text="IT" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/salaryInput"
        style="@style/textInputLayoutSalary"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_24"
        android:background="@drawable/shape_corner_and_back_edit_text"
        android:hint="@string/expected_salary"
        android:paddingTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sector">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/salaryEdit"
            style="@style/textInputEditTextSalary"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:paddingTop="0dp"
            android:paddingBottom="@dimen/dp_8"
            android:text="@string/enter_the_amount" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/show_salary_text"
        style="@style/appearance_regular_16"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center_vertical"
        android:text="@string/do_not_show_without_salary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salaryInput" />

    <CheckBox
        style="@style/Widget.App.CheckBox"
        android:id="@+id/salaryCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/show_salary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/show_salary_text" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apply"
        style="@style/applyButton"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/shape_corner_button"
        android:text="@string/apply"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/drop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/drop"
        style="@style/dropText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_44"
        android:gravity="center"
        android:text="@string/drop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
