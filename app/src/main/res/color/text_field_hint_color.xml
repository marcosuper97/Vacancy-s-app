<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Текст введён, поле не в фокусе -->
    <item android:color="@color/grey" android:state_enabled="true" android:state_focused="false" />
    <!-- Поле в фокусе (с текстом или без) -->
    <item android:color="@color/grey" android:state_focused="false" android:state_enabled="false" />
    <!-- Поле пустое и не в фокусе -->
    <item android:color="@color/grey" android:state_enabled="false" />
    <!-- По умолчанию -->
    <item android:color="@color/grey" />
</selector>
